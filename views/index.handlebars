<h1>Eat-Da-Burger!</h1>
<h2>Hungry? Eat a Burger:</h2>
<ul class="not-devoured">
  {{#each burgers}}
    {{#unless this.devoured}}
      <li class="burger-list">
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button class="devour" type="submit">Devour it!</button>
        </form>

      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers:</h2>
<ul class="devoured">
  {{#each burgers}}
    {{#if this.devoured}}
      <li class="burger-list">
        {{this.name}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Order a Burger!</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <button class="submit" type="submit">Add Your Burger</button>
</form>
